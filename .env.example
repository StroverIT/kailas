# Supabase PostgreSQL (Session pooler URL for Next.js)
# Get from: Supabase Dashboard → Settings → Database → Connection string
DATABASE_URL="postgres://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"
DIRECT_URL="postgres://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"

# NextAuth (generate secret: openssl rand -base64 32)
AUTH_SECRET="your-secret-here"
# Or use NEXTAUTH_URL and NEXTAUTH_SECRET if you prefer

# Optional: for seeding first admin user (npm run db:seed)
# ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=your-secure-password

# Email (Nodemailer + Gmail OAuth2) - for event registration and booking confirmations
# Gmail account that sends emails (must match the account the refresh token was obtained for)
# GMAIL_USER=your@gmail.com
# Google OAuth2 credentials (from Google Cloud Console)
# CLIENT_ID=xxx.apps.googleusercontent.com
# CLIENT_SECRET=GOCSPX-xxx
# REDIRECT_URI=https://developers.google.com/oauthplayground
# Refresh token from OAuth Playground (scope: https://mail.google.com/)
# REFRESH_TOKEN=1//0xxx
# Admin email to receive notifications when users register or submit booking
# NEXT_PUBLIC_EMAIL=info@yourdomain.com

# Google Tag Manager & Analytics (production only)
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXX
